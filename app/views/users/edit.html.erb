<div class="container">
<% if @user.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li>error</li>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<h1>User info</h1>
<%= form_for(@user) do |f| %>
  <div class="field">
    <label>Name</label>
    <%= f.text_field :name %>
  </div>
    <br>
  <div class="field">
    <label>Image</label>
   <%= f.attachment_field :profile_image %>
 </div>
 <br>
  <div class="field">
    <label>Introduction</label>
    <%=f.text_area :introduction %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit 'Update User' %>
  </div>
<% end %>
</div>