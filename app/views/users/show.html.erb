<% if flash[:notice] %>
 <p class="flash"><%= flash[:notice] %></p>
<% end %>
<%= render 'users/list', user: @user, book: @book, books: @user.books %>
<div class="col-xs-9">
  <h2>Books</h2>
 <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
 <tbody>
    <% @books.each do |book| %>
      <tr>
       <td><%= attachment_image_tag book.user, :profile_image,size:"50x50", format: 'jpeg', fallback: "no_image.png" %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.body %></td>
    </tr>
     <% end %>
   </tbody>
</table>
</div>
</div>
</div>





