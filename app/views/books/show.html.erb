<h1>show</h1>
<% if flash[:notice] %>
 <p class="flash"><%= flash[:notice] %></p>
<% end %>
<%= render 'users/list', user: @book.user, book: @book %>

<div class="col-xs-9">
  <h2>Book detail</h2>
  <table class="table">
<tbody>
      <tr>
       <td><%= attachment_image_tag @book.user, :profile_image, size:"100x100", format: 'jpeg', fallback: "no_image.png" %>
        <br>
       	<%= link_to @book.user.name,user_path(@book.user.id) %></td>
       <td><%= @book.title %></td>
       <td><%= @book.body %></td>
      <td><% if @book.user == current_user %>
        <%= link_to 'Edit', edit_book_path(@book.id),class: "btn-sm btn-success" %>
          <% end %>
        </td>
      <td>
        <% if @book.user == current_user %>
        <%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" =>"本当に消しますか？", commit: "OK", cancel: "キャンセル",class: "btn-sm btn-danger" %>
          <% end -%>
        </td>
    </tr>
   </tbody>
   </table>
 </div>
</div>
</div>