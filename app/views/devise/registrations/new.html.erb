<div class="body">
<div class="container">
    <h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
        <label for="user_name">Name</label>
        <br>
        <%= f.text_field :name, autofocus: true, placeholder:"名前"%>
    </div>
    <br>
    <div class="field">
        <label class="user_email">Email</label>
        <br>
        <%= f.email_field :email, placeholder:"メールアドレス"%>
    </div>
    <br>
    <div class="field">
        <label class="user_password">Password</label>
        <em>(6 characters minimum)</em>
        <br>
        <%= f.password_field :password, autocomplete: "off", id:"inputPassword", placeholder:"パスワード" %>
    </div>
    <br>
    <div class="field">
        <label class="user_password_confirmation">Password confirmation</label>
        <br>
        <%= f.password_field :password_confirmation, autocomplete: "off", id:"inputConfirmPassword", placeholder:"パスワード確認" %>
         </div>
         <br>
    <div class="action">
        <%= f.submit "Sign up", class:"btn btn-success" %>
    <% end %>
</div>
<p><%= link_to "Log In", new_user_session_path %></p>
</div>
</div>
